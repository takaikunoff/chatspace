.sidebar
  .header
    .header__content
      %p.user-name
        = current_user.name
      %ul.user-menu
        %li.create-group
          = link_to new_group_path do
            = fa_icon "edit",class: 'icon'
        %li.edit-user
          = link_to edit_user_path(current_user) do
            = fa_icon "cog",class: 'icon'
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
